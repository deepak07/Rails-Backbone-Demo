<div class="row">
  <div class="checkbox col-md-1">
    <input type="checkbox" class="task-completed-box">
  </div>
  <div class="task-details col-md-8">
    <b><%= @task.get('title') %></b>
    <p><%= @task.get('description') %></p>
  </div>
  <div class="due-date-display col-md-3">
    <%= @task.get('due_date') %>
  </div>
</div>
<hr/>